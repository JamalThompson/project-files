@model List<ASL.Models.Customer>

@{
    ViewData["Title"] = "Index";
}



<p>
    <h2>Our Customers</h2><a asp-action="Create" class="btn btn-success">Create New Customer</a>
</p>
<table class="table customer-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].BillCycle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Phone_Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.BillCycle)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Phone_Number)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
